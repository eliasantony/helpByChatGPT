<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/users.css" type="text/css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
    <title>User Overview</title>
</head>
<body>
<div class="container">
    <h1>This is the users overview:</h1>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <% users.forEach(user => { %>
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <a href="/users/<%= user.id %>">
                            <h5 class="card-title"><%= user.name %> <%= user.surname %></h5>
                            <p class="card-text"><strong>Hero:</strong> <%= user.hero %></p>
                        </a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
<!--    <div class="d-flex justify-content-center mt-4">-->
<!--    </div>-->

    <a class="btn btn-success" href="/users/add">Add a new User</a>
    <a class="btn btn-secondary" href="/">Back to home page</a>
</div>
</body>
</html>
