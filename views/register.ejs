<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/register.css" type="text/css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
    <title>Register</title>
</head>
<header>
    <div class="container">
        <h1>Register</h1>
    </div>
</header>
<main>
    <div class="container d-flex flex-column justify-content-center align-items-center">
        <form action="/register" enctype="multipart/form-data" method="post">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-8">
                        <% column.forEach(function (column) { if(column.Field !== 'avatarPath') { %>
                            <div class="row form-floating mb-3">
                                <input class="form-control"
                                       type="text"
                                       id="<%= column.Field %>"
                                       name="<%= column.Field %>"
                                       placeholder="text"
                                       style="width: 100%; background-color: white"
                                    <% if (column.Field === 'id') { %> disabled <% } %>
                                "/>
                                <label class="mb-0" for="<%= column.Field %>"><%= column.Field %></label>
                            </div>
                        <% }}) %>
                    </div>
                    <div class="col-4 justify-content-center">
                        <label class="fw-bold" style="margin-top: 60px;">Avatar</label>
                        <img id="avatarPreview" src="/avatars/default.png" alt="avatar"
                             class="img-thumbnail"
                             style="max-height: 80%; width: 350px;">
                        <label class="btn btn-primary" for="avatarSelect">
                            <input id="avatarSelect" class="btn" type="file" name="avatar" accept=".png, .jpg, .jpeg"
                                   style="display: none" onchange="previewFile()">
                            Select Image
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <input class="btn btn-success" type="submit" value="Register"/>
                        <a class="btn btn-secondary" href="/login">Already have an account? Login instead!</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</main>
<script>
    function previewFile() {
        console.log('previewFile');
        const preview = document.getElementById('avatarPreview');
        const file = document.getElementById('avatarSelect').files[0];
        const reader = new FileReader();

        reader.addEventListener("load", function () {
            preview.src = reader.result;
        }, false);

        if (file) {
            reader.readAsDataURL(file);
        }
    }
</script>
</html>
